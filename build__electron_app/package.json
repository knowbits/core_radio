{
  "name": "streaming-radio-player",
  "version": "0.1.0",
  "description": "Streaming Radio Player",
  "author": "Erlend Bleken <bleken@gmail.com>",
  "license": "MIT",

  "main": "main.js",
  "build": {
    "appId": "org.bleken.streamingRadioPlayer",
    "directories": {
      "output": "dist"
    },
    "win": {
      "icon": "favicon_256x256.ico",
      "target": [
        {
          "target": "nsis"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "mac": {
      "icon": "mac_icon.icns",
      "target": "zip"
    },
    "linux": {
      "icon": "linux_icon.png"
    }
  },
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist-all-platforms": "electron-builder --all",
    "dist-all-platforms-and-architectures": "electron-builder --all --arch=all",
    "dist-linux-all": "electron-builder --platform=linux --all",
    "dist-linux-Intel-x64": "electron-builder --platform=linux --arch=x64",
    "dist-linux-Intel-ia32": "electron-builder --platform=linux --arch=ia32",
    "dist-linux-ARM": "electron-builder --platform=linux --arch=armv7l",
    "dist-linux-ARM64": "electron-builder --platform=linux --arch=arm64",
    "dist-windows-x64": "electron-builder --win --x64",
    "dist-windows-ia32": "electron-builder --win --ia32",
    "dist-mac-on-Intel": "electron-builder --mac --x64",
    "dist-mac-on-M1": "electron-builder --mac --arm64",
    "dist-mac-on-Intel-and-M1": "electron-builder --mac --universal"
  },
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "electron-packager": "^17.1.2"
  }
}
